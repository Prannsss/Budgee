            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"GCash\",\n  \"type\": \"e-wallet\",\n  \"account_number\": \"09171234567\",\n  \"balance\": 5000.00,\n  \"logo_url\": \"https://example.com/gcash-logo.png\"\n}"
